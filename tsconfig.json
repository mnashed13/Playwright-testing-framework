{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"sourceMap": true,
		"types": ["node", "@cucumber/cucumber", "@playwright/test"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
