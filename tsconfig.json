{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./api-tests",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "@cucumber/cucumber", "chai"]
	},
	"include": ["api-tests/**/*"],
	"exclude": ["node_modules"]
}
